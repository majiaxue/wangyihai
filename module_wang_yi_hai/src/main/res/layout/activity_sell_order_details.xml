<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/beijing" />

    <LinearLayout
        android:id="@+id/sell_order_details_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_status" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <ImageView
                android:id="@+id/sell_order_details_back"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_36"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@drawable/icon_fanhui_bai" />

            <TextView
                android:id="@+id/sell_order_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/sell_order_details_complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:text="投诉"
                android:textColor="#ffffffff"
                android:textSize="@dimen/dp_13"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/sell_order_details_bottom_linear"
        android:layout_below="@id/sell_order_details_linear">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/sell_order_details_relative2"
                android:layout_width="@dimen/dp_310"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/sell_order_details_relative1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_m_5"
                android:background="@drawable/bg_15_fff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sell_order_details_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:includeFontPadding="false"
                    android:text="2019-10-10 16:24:10"
                    android:textColor="#ffcc9966"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sell_order_details_relative1"
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_114"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/kapian_jin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/sell_order_details_order_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="订单账号：26454545231"
                    android:textColor="#ff996633"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_38"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_51"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/sell_order_details_singularization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ff996633"
                            android:textSize="@dimen/sp_21"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="币种数量"
                            android:textColor="#ff996633"
                            android:textSize="@dimen/sp_14" />
                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_51"
                        android:background="#FFF8F7F5" />

                    <RelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_51"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/sell_order_details_task_earnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:textColor="#ff996633"
                            android:textSize="@dimen/sp_21"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="交易总价"
                            android:textColor="#ff996633"
                            android:textSize="@dimen/sp_14" />
                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sell_order_details_relative"
                android:layout_width="@dimen/dp_331"
                android:layout_height="wrap_content"
                android:layout_below="@id/sell_order_details_relative2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_5_fff">

                <TextView
                    android:id="@+id/sell_order_details_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="本人信息"
                    android:textColor="#ff4c49de"
                    android:textSize="@dimen/sp_13" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sell_order_details_head"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_66"
                    android:layout_below="@id/sell_order_details_text"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:roundAsCircle="true" />

                <TextView
                    android:id="@+id/sell_order_details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/sell_order_details_head"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/sell_order_details_head"
                    android:includeFontPadding="false"
                    android:text="姓名: @007"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/sell_order_details_superior_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sell_order_details_name"
                    android:layout_alignLeft="@id/sell_order_details_name"
                    android:layout_marginTop="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="ID：0112212"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/sell_order_details_alipay_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/sell_order_details_name"
                    android:layout_alignBottom="@id/sell_order_details_head"
                    android:text="支付宝账号：0112212"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:id="@+id/sell_order_details_alipay_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/sell_order_details_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_26"
                        android:includeFontPadding="false"
                        android:text="支付宝："
                        android:textColor="#ff666666"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:id="@+id/sell_order_details_alipay_qr"
                        android:layout_width="@dimen/dp_55"
                        android:layout_height="@dimen/dp_55" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sell_order_details_relative3"
                android:layout_width="@dimen/dp_331"
                android:layout_height="wrap_content"
                android:layout_below="@id/sell_order_details_relative"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_5_fff">

                <TextView
                    android:id="@+id/sell_order_details_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="买家信息"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/sell_order_details_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:includeFontPadding="false"
                    android:text="注：拍下不付款冻结账户"
                    android:textColor="#ffcc0000"
                    android:textSize="@dimen/sp_11"
                    android:visibility="gone" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sell_order_details_head1"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_66"
                    android:layout_below="@id/sell_order_details_text1"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:roundAsCircle="true" />

                <TextView
                    android:id="@+id/sell_order_details_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/sell_order_details_head1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@id/sell_order_details_head1"
                    android:includeFontPadding="false"
                    android:text="买家: @007"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/sell_order_details_superior_id1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sell_order_details_name1"
                    android:layout_alignLeft="@id/sell_order_details_name1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="ID：0112212"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sell_order_details_relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/sell_order_details_relative3"
                android:layout_marginTop="@dimen/dp_17">

                <TextView
                    android:id="@+id/sell_order_details_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="上传支付凭证："
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_13" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/sell_order_details_upload_pic"
                    android:layout_width="@dimen/dp_109"
                    android:layout_height="@dimen/dp_94"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15"
                    app:placeholderImage="@drawable/sahngchuan"
                    app:placeholderImageScaleType="fitXY"
                    app:roundedCornerRadius="@dimen/dp_5" />

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/sell_order_details_bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sell_order_details_pay"
            android:layout_width="@dimen/dp_333"
            android:layout_height="@dimen/dp_42"
            android:background="@drawable/bg_20_ff4c49de"
            android:gravity="center"
            android:text="付款"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/sell_order_details_cancel"
            android:layout_width="@dimen/dp_333"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_20_ff4c49de"
            android:gravity="center"
            android:text="取消卖单"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dp_15"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sell_order_details_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:textColor="#ffcc0000"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>

</RelativeLayout>
