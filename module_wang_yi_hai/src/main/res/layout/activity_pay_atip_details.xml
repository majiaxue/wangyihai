<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xingshi.y_mine.y_welfare_center.pay_a_tip_details.PayATipDetailsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/flzx_bg" />

    <include
        android:id="@+id/pay_a_tip_details_include"
        layout="@layout/include_status" />

    <RelativeLayout
        android:id="@+id/pay_a_tip_details_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@id/pay_a_tip_details_include">

        <ImageView
            android:id="@+id/pay_a_tip_details_image_back"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:padding="@dimen/dp_10"
            android:src="@drawable/icon_fanhui_bai" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="线报详情"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_17" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pay_a_tip_details_relative"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pay_a_tip_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#FFFFFFFF"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="金鱼的记忆七秒"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_13"
            android:text="内容:"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_14" />

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/dp_329"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="vertical"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="@dimen/dp_5"
            app:cardElevation="@dimen/dp_6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/pay_a_tip_details_pic"
                    android:layout_width="@dimen/dp_171"
                    android:layout_height="@dimen/dp_114"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_14"
                    app:roundedCornerRadius="@dimen/dp_2" />

                <TextView
                    android:id="@+id/pay_a_tip_details_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:text="欢迎使用亿起嗨欢迎使用亿起嗨欢迎使用亿起嗨"
                    android:textColor="#FF999999"
                    android:textColorHint="#FF999999"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>
