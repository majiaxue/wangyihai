<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingshi.y_mine.y_welfare_center.commission_task_details.CommissionTaskDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beijing1"
        android:orientation="vertical">

        <include layout="@layout/include_status" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <ImageView
                android:id="@+id/commission_task_details_back"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_36"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@drawable/icon_fanhui_bai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="任务详情"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_17" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="标题:"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/commission_task_details_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="发布方:"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/commission_task_details_publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_36"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="编号:"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/commission_task_details_serial_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_33"
                    android:text="类别:"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/commission_task_details_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="单价:"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/commission_task_details_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_54"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="链接:"
                        android:textColor="#ff666666"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/commission_task_details_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_50"
                        android:textColor="#ff333333"
                        android:textSize="@dimen/sp_12" />
                </LinearLayout>

                <TextView
                    android:id="@+id/commission_task_details_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dp_15"
                    android:includeFontPadding="false"
                    android:text="（点击复制链接）"
                    android:textColor="#ff4c49de"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="#FFF1F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="文字验证:"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/commission_task_details_word_verification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="备注:"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/commission_task_details_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="#FFF1F0F0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="置顶到期:"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/commission_task_details_set_top_due"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="截止时间:"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/commission_task_details_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_22"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:background="#FFF1F0F0" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/commission_task_details_image_rec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

            <LinearLayout
                android:id="@+id/commission_task_details_pic_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/commission_task_details_upload_pictures"
                    android:layout_width="@dimen/dp_144"
                    android:layout_height="@dimen/dp_123"
                    app:placeholderImage="@drawable/sahngchuan"
                    app:placeholderImageScaleType="fitXY"
                    app:roundedCornerRadius="@dimen/dp_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="上传截图"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/commission_task_details_time_remaining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffcc0000"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

        <TextView
            android:id="@+id/commission_task_details_affirm"
            android:layout_width="@dimen/dp_333"
            android:layout_height="@dimen/dp_42"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@drawable/bg_20_ff4c49de"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="@dimen/dp_15" />

    </LinearLayout>

</LinearLayout>
