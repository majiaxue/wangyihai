<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingshi.y_mine.y_setting.y_change_password.YChangePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beijing1"
        android:orientation="vertical">

        <include layout="@layout/include_status" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <ImageView
                android:id="@+id/y_change_password_back"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@drawable/icon_fanhui_bai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="修改登录密码"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_17" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="手机号"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/y_change_password_password"
            android:layout_width="@dimen/dp_220"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/y_change_password_get_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#ff4c49de"
            android:textSize="@dimen/sp_17" />

    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#FFF1F1F1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="验证码"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/y_change_password_verification_code"
            android:layout_width="@dimen/dp_220"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#FFF1F1F1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="新密码"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/y_change_password_new_password"
            android:layout_width="@dimen/dp_220"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:hint="请输入新密码"
            android:inputType="number"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_1"
        android:layout_gravity="center_horizontal"
        android:background="#FFF1F1F1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="确认密码"
            android:textColor="#ff333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/y_change_password_affirm_password"
            android:layout_width="@dimen/dp_220"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:hint="请确认密码"
            android:inputType="number"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/y_change_password_commit"
        android:layout_width="@dimen/dp_333"
        android:layout_height="@dimen/dp_42"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_30"
        android:background="@drawable/bg_20_ff4c49de"
        android:gravity="center"
        android:text="完成"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_15" />

</LinearLayout>
