<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/pop_get_gift_bag_cancel"
            android:layout_width="@dimen/dp_33"
            android:layout_height="@dimen/dp_33"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_29"
            android:src="@drawable/guanbi" />

        <ImageView
            android:id="@+id/pop_get_gift_bag_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_444"
            android:src="@drawable/ion" />

        <TextView
            android:id="@+id/pop_get_gift_bag_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_get_gift_bag_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-50dp"
            android:text="恭喜您"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_24" />

        <TextView
            android:id="@+id/pop_get_gift_bag_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pop_get_gift_bag_text"
            android:layout_centerHorizontal="true"
            android:text="获得超级礼包"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_24" />

    </RelativeLayout>

</RelativeLayout>