<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/dp_156"
        android:layout_height="@dimen/dp_192"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/dp_10"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/y_task_rec_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_128"
                app:roundBottomLeft="false"
                app:roundBottomRight="false"
                app:roundedCornerRadius="@dimen/dp_10" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/y_task_rec_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="中级礼包"
                    android:textColor="#ff4c49de"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/y_task_rec_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:includeFontPadding="false"
                    android:text="(11个币)"
                    android:textColor="#ffc91818"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


            <TextView
                android:id="@+id/y_task_rec_earnings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_7"
                android:includeFontPadding="false"
                android:text="收益:13个币    周期:40天"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/y_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_7"
                android:includeFontPadding="false"
                android:text="任务:每天查看1个商品"
                android:textColor="#ff999999"
                android:textSize="12sp" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/y_task_conversion"
        android:layout_width="@dimen/dp_101"
        android:layout_height="@dimen/dp_28"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_15_ffc91818"
        android:gravity="center"
        android:text="兑换"
        android:textColor="#ffffffff"
        android:textSize="@dimen/sp_13" />

</LinearLayout>