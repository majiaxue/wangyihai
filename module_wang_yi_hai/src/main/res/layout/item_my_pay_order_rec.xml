<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_170"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    app:cardBackgroundColor="#fff"
    app:cardElevation="@dimen/dp_14">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/my_pay_order_rec_image"
            android:layout_width="@dimen/dp_124"
            android:layout_height="@dimen/dp_109"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            app:roundedCornerRadius="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/my_pay_order_rec_image"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/my_pay_order_rec_image"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型："
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/my_pay_order_rec_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卖家："
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/my_pay_order_rec_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#FF7C5FFF"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="ID："
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/my_pay_order_rec_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="币种："
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/my_pay_order_rec_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总价："
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/my_pay_order_rec_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/my_pay_order_rec_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_13"
            android:text="2019-10-10  16:23:01"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/my_pay_order_rec_look_over"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_22"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_11_ff7c5fff"
            android:gravity="center"
            android:text="查看"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/my_pay_order_rec_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/tongguo1"
            android:gravity="center"
            android:text="已完成"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

</android.support.v7.widget.CardView>