<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingshi.y_mine.y_personal_details.YPersonalDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beijing1"
        android:orientation="vertical">

        <include layout="@layout/include_status" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <ImageView
                android:id="@+id/y_personal_details_back"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@drawable/icon_fanhui_bai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="个人信息"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_17" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/y_personal_details_phone_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/y_personal_details_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_23"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/right_back" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/y_personal_details_name"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_46"
                    android:gravity="right|center_vertical"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证号"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/y_personal_details_identity_card"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_46"
                    android:gravity="right|center_vertical"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐人"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/y_personal_details_referrer"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_46"
                    android:gravity="right|center_vertical"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/y_personal_details_WeChat_account"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_46"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入微信"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="微信二维码"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_38"
                    android:layout_marginBottom="@dimen/dp_17"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/y_personal_details_weChat_qr"
                        android:layout_width="@dimen/dp_75"
                        android:layout_height="@dimen/dp_64"
                        android:src="@drawable/sahngchuan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="上传照片"
                        android:textColor="#FF666666"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_5"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_47"
                android:layout_marginLeft="@dimen/dp_14"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付宝"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <EditText
                    android:id="@+id/y_personal_details_aliPay_account"
                    android:layout_width="@dimen/dp_200"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_46"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入实名一致的支付宝账号"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_1"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="支付宝二维码"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_38"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/y_personal_details_aliPay_qr"
                        android:layout_width="@dimen/dp_75"
                        android:layout_height="@dimen/dp_64"
                        android:src="@drawable/sahngchuan" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="上传照片"
                        android:textColor="#FF666666"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/y_personal_details_commit"
                android:layout_width="@dimen/dp_333"
                android:layout_height="@dimen/dp_42"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_33"
                android:background="@drawable/bg_20_ff4c49de"
                android:gravity="center"
                android:text="提交"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_15"
                android:visibility="gone" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
