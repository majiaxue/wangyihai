<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_94">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/y_deal_rec_pic"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/y_deal_rec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/y_deal_rec_pic"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@id/y_deal_rec_pic"
            android:includeFontPadding="false"
            android:text="008"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/y_deal_rec_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/y_deal_rec_name"
            android:layout_alignLeft="@id/y_deal_rec_name"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/y_deal_rec_pic"
            android:includeFontPadding="false"
            android:text="ID：0112212"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/y_deal_rec_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/y_deal_rec_name"
            android:layout_alignBottom="@id/y_deal_rec_pic"
            android:drawableLeft="@drawable/jinbi"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="bottom"
            android:includeFontPadding="false"
            android:text="买入"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_marginTop="@dimen/dp_5"
            android:id="@+id/dan_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/y_deal_rec_id"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/y_deal_rec_content"
            android:text="单价:"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/y_deal_rec_sell"
            android:layout_width="@dimen/dp_74"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_15_ff4c49de"
            android:gravity="center"
            android:text="出售"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <View
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_0_5"
        android:layout_gravity="center_horizontal"
        android:background="#FFE9EAEB" />

</LinearLayout>