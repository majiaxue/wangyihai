<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingshi.y_mine.y_welfare_center.release_a_task.ReleaseATaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beijing2"
        android:orientation="vertical">

        <include layout="@layout/include_status" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <ImageView
                android:id="@+id/release_a_task_back"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_37"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@drawable/arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发布任务"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_17" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/release_a_task_title_rec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="标题:"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/release_a_task_edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入标题(最多输入12位标题)"
                    android:maxLength="12"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF333333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <RelativeLayout
                android:id="@+id/release_a_task_choose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="截止时间:"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/release_a_task_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:layout_width="@dimen/dp_9"
                    android:layout_height="@dimen/dp_14"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@drawable/arrow1" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="单价:"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/release_a_task_edit_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入单价"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF333333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="会员:"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/release_a_task_edit_member_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入会员价格"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF333333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="股东:"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/release_a_task_edit_shareholder_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入股东价格(股东价应高于会员价的20%)"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF333333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_15"
                android:text="注: 如会员价是100,则股东价为120"
                android:textColor="#FF0000"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="数量:"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/release_a_task_edit_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入数量"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF333333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="重复数量:"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/release_a_task_edit_again_num"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入数量"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF333333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="合计:"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/release_a_task_edit_total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#FFF1F1F1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_95">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="审核样图:"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/dp_14" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/release_a_task_review_the_figure_left"
                    android:layout_width="@dimen/dp_84"
                    android:layout_height="@dimen/dp_72"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_toLeftOf="@id/release_a_task_review_the_figure_right"
                    app:placeholderImage="@drawable/sahngchuan"
                    app:placeholderImageScaleType="fitXY"
                    app:roundedCornerRadius="@dimen/dp_2" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/release_a_task_review_the_figure_right"
                    android:layout_width="@dimen/dp_84"
                    android:layout_height="@dimen/dp_72"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    app:placeholderImage="@drawable/sahngchuan"
                    app:placeholderImageScaleType="fitXY"
                    app:roundedCornerRadius="@dimen/dp_2" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="操作说明:"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/release_a_task_edit_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入详细说明"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF333333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="链接:"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/release_a_task_edit_link"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入链接"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF333333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_331"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="文字验证:"
                    android:textColor="#ff666666"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/release_a_task_edit_word_verification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入文字验证（需接单者提供文字）"
                    android:textColor="#FF333333"
                    android:textColorHint="#FF333333"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="center_horizontal"
                android:background="#FFF1F1F1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_111">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_13"
                    android:text="备注:"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/dp_14" />

                <EditText
                    android:id="@+id/release_a_task_edit_content"
                    android:layout_width="@dimen/dp_247"
                    android:layout_height="@dimen/dp_70"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_95"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/bg_2_ffbfbfbf"
                    android:gravity="left"
                    android:hint="200字以内"
                    android:maxLength="200"
                    android:padding="@dimen/dp_10"
                    android:textColor="#FF999999"
                    android:textColorHint="#FF999999"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/release_a_task_but_affirm"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:background="@drawable/select_task"
                    android:button="@null"
                    android:checked="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="我已阅读、并理解同意"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/release_a_task_agreement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《发布协议》"
                    android:textColor="#FFCC0000"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="的全部内容"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <TextView
                android:id="@+id/release_a_task_issue"
                android:layout_width="@dimen/dp_333"
                android:layout_height="@dimen/dp_42"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_30"
                android:background="@drawable/bg_20_ff4c49de"
                android:gravity="center"
                android:text="立即发布"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_15" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
