<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:scaleType="fitXY"
        android:src="@drawable/beijing_wode" />

    <include
        android:id="@+id/y_mine_include"
        layout="@layout/include_status" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/y_mine_include">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/y_mine_head_portrait"
                    android:layout_width="@dimen/dp_65"
                    android:layout_height="@dimen/dp_65"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_17"
                    app:roundAsCircle="true" />

                <ImageView
                    android:id="@+id/y_mine_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/y_mine_head_portrait"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:padding="@dimen/dp_5"
                    android:src="@drawable/shezhi" />

                <TextView
                    android:id="@+id/y_mine_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/y_mine_head_portrait"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_toRightOf="@id/y_mine_head_portrait"
                    android:includeFontPadding="false"
                    android:text="昵称。"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_17" />

                <TextView
                    android:id="@+id/y_mine_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/y_mine_nick_name"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_3"
                    android:layout_toRightOf="@id/y_mine_nick_name"
                    android:background="@drawable/huanguan"
                    android:gravity="right"
                    android:paddingLeft="@dimen/dp_20"
                    android:paddingRight="@dimen/dp_6"
                    android:text="VIP 1"
                    android:textColor="#FF504336"
                    android:textSize="@dimen/sp_9" />

                <TextView
                    android:id="@+id/y_mine_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/y_mine_nick_name"
                    android:layout_alignBottom="@id/y_mine_head_portrait"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="ID:KU588588588"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:id="@+id/y_mine_view"
                    android:layout_width="@dimen/dp_334"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_below="@id/y_mine_head_portrait"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_13"
                    android:background="#FFF8F8F8" />

                <LinearLayout
                    android:layout_width="@dimen/dp_334"
                    android:layout_height="@dimen/dp_64"
                    android:layout_below="@id/y_mine_view"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/y_mine_bi_linear"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/y_mine_bi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="106"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:drawableLeft="@drawable/bi"
                            android:drawablePadding="@dimen/dp_4"
                            android:text="币"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_0_5"
                        android:layout_height="@dimen/dp_36"
                        android:background="#FFF8F8F8" />

                    <LinearLayout
                        android:id="@+id/y_mine_gong_xian_zhi_linear"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/y_mine_gong_xian_zhi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="51"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:drawableLeft="@drawable/guangxianzhi"
                            android:drawablePadding="@dimen/dp_4"
                            android:text="贡献值"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_0_5"
                        android:layout_height="@dimen/dp_36"
                        android:background="#FFF8F8F8" />

                    <LinearLayout
                        android:id="@+id/y_mine_yong_jin_linear"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/y_mine_yong_jin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1064"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:drawableLeft="@drawable/yongjin"
                            android:drawablePadding="@dimen/dp_4"
                            android:text="佣金"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/dp_0_5"
                        android:layout_height="@dimen/dp_36"
                        android:background="#FFF8F8F8" />

                    <LinearLayout
                        android:id="@+id/y_mine_yue_linear"
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/y_mine_yue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="#ffffffff"
                            android:textSize="@dimen/sp_18" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:drawableLeft="@drawable/yue"
                            android:drawablePadding="@dimen/dp_4"
                            android:text="余额"
                            android:textColor="#ffffffff"
                            android:textSize="12sp" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_335"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_m_25"
                android:background="@drawable/vip"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_80"
                    android:text="预估收益"
                    android:textColor="#ff745c44"
                    android:textSize="@dimen/sp_19" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_36"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginRight="@dimen/dp_21"
                    android:background="#FF745C44" />

                <TextView
                    android:id="@+id/y_mine_income_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥777"
                    android:textColor="#ff745c44"
                    android:textSize="@dimen/sp_22" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_107"
                android:layout_marginTop="@dimen/dp_10"
                app:cardBackgroundColor="#FFF"
                app:cardElevation="@dimen/dp_14">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_12"
                        android:text="我的应用"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold" />

                    <com.kongzue.tabbar.TabBarView
                        android:id="@+id/y_mine_my_application"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:iconPadding="2dp"
                        app:noDyeing="true"
                        app:noSelect="true"
                        app:normalColor="#FF333333"
                        app:paddingNavigationBar="false"
                        app:tabClickBackground="empty"
                        app:tabPaddingVertical="@dimen/dp_5"
                        app:textSize="@dimen/sp_12" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/y_mine_platinum_view"
                    android:layout_width="@dimen/dp_159"
                    android:layout_height="@dimen/dp_89"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:cardBackgroundColor="#FFF"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_14">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_11"
                            android:src="@drawable/ion_bojin" />

                        <TextView
                            android:id="@+id/y_mine_platinum_gift_bag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:text="珀金礼包"
                            android:textColor="#ff010101"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="@dimen/dp_48"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/y_mine_platinum_gift_bag"
                            android:layout_alignLeft="@id/y_mine_platinum_gift_bag"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="行动起来等你来抢"
                            android:textColor="#ff787878"
                            android:textSize="@dimen/sp_11" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/y_mine_red_packet_view"
                    android:layout_width="@dimen/dp_159"
                    android:layout_height="@dimen/dp_89"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:cardBackgroundColor="#FFF"
                    app:cardCornerRadius="@dimen/dp_10"
                    app:cardElevation="@dimen/dp_14">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_11"
                            android:src="@drawable/ion_xrhb" />

                        <TextView
                            android:id="@+id/y_mine_red_packet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_15"
                            android:text="新人红包"
                            android:textColor="#ff010101"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="@dimen/dp_48"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/y_mine_red_packet"
                            android:layout_alignLeft="@id/y_mine_red_packet"
                            android:layout_marginTop="@dimen/dp_10"
                            android:text="新人优惠赢取大礼"
                            android:textColor="#ff787878"
                            android:textSize="@dimen/sp_11" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFF"
                app:cardElevation="@dimen/dp_14">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_12"
                        android:text="服务工具"
                        android:textColor="#ff000000"
                        android:textSize="@dimen/sp_17"
                        android:textStyle="bold" />

                    <com.kongzue.tabbar.TabBarView
                        android:id="@+id/y_mine_service_aid1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_70"
                        app:iconPadding="2dp"
                        app:noDyeing="true"
                        app:noSelect="true"
                        app:normalColor="#FF333333"
                        app:paddingNavigationBar="false"
                        app:tabClickBackground="empty"
                        app:tabPaddingVertical="@dimen/dp_5"
                        app:textSize="@dimen/sp_12" />

                    <com.kongzue.tabbar.TabBarView
                        android:id="@+id/y_mine_service_aid2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_70"
                        app:iconPadding="2dp"
                        app:noDyeing="true"
                        app:noSelect="true"
                        app:normalColor="#FF333333"
                        app:paddingNavigationBar="false"
                        app:tabClickBackground="empty"
                        app:tabPaddingVertical="@dimen/dp_5"
                        app:textSize="@dimen/sp_12" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</RelativeLayout>
