<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xingshi.y_deal.appeal.AppealActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/beijing" />

    <LinearLayout
        android:id="@+id/appeal_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_status" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <ImageView
                android:id="@+id/appeal_back"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_36"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@drawable/icon_fanhui_bai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="申诉"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/appeal_complaint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:text="投诉"
                android:textColor="#ffffffff"
                android:textSize="@dimen/dp_13"
                android:visibility="gone" />

        </RelativeLayout>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appeal_linear">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/appeal_relative2"
                android:layout_width="@dimen/dp_310"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/appeal_relative1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_m_5"
                android:background="@drawable/bg_15_fff"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/appeal_order_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_20"
                    android:includeFontPadding="false"
                    android:text="2019-10-10 16:24:10"
                    android:textColor="#ffcc9966"
                    android:textSize="@dimen/sp_12" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/appeal_relative1"
                android:layout_width="@dimen/dp_331"
                android:layout_height="@dimen/dp_114"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/kapian_jin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/appeal_order_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="订单账号：26454545231"
                    android:textColor="#ff996633"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_38"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_51"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/appeal_singularization"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="10610"
                            android:textColor="#ff996633"
                            android:textSize="@dimen/sp_21"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="币种数量"
                            android:textColor="#ff996633"
                            android:textSize="@dimen/sp_14" />
                    </RelativeLayout>

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_51"
                        android:background="#FFF8F7F5" />

                    <RelativeLayout
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_51"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/appeal_task_earnings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="$ 150.00"
                            android:textColor="#ff996633"
                            android:textSize="@dimen/sp_21"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="@dimen/dp_0"
                            android:layout_height="@dimen/dp_0"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="交易总价"
                            android:textColor="#ff996633"
                            android:textSize="@dimen/sp_14" />
                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/appeal_relative"
                android:layout_width="@dimen/dp_331"
                android:layout_height="wrap_content"
                android:layout_below="@id/appeal_relative2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_5_fff">

                <TextView
                    android:id="@+id/appeal_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="卖家信息"
                    android:textColor="#ff4c49de"
                    android:textSize="@dimen/sp_13" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/appeal_head"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_66"
                    android:layout_below="@id/appeal_text"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:roundAsCircle="true" />

                <TextView
                    android:id="@+id/appeal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/appeal_head"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/appeal_head"
                    android:includeFontPadding="false"
                    android:text="买家: @007"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/appeal_superior_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/appeal_name"
                    android:layout_alignLeft="@id/appeal_name"
                    android:layout_marginTop="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="上级ID：0112212"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/appeal_alipay_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/appeal_name"
                    android:layout_alignBottom="@id/appeal_head"
                    android:text="支付宝账号：0112212"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/appeal_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_12"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_26"
                        android:includeFontPadding="false"
                        android:text="支付宝："
                        android:textColor="#ff666666"
                        android:textSize="@dimen/sp_12" />

                    <ImageView
                        android:id="@+id/appeal_alipay_qr"
                        android:layout_width="@dimen/dp_55"
                        android:layout_height="@dimen/dp_55" />

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/appeal_relative3"
                android:layout_width="@dimen/dp_331"
                android:layout_height="wrap_content"
                android:layout_below="@id/appeal_relative"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_12"
                android:background="@drawable/bg_5_fff">

                <TextView
                    android:id="@+id/appeal_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="本人信息"
                    android:textColor="#FF333333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:includeFontPadding="false"
                    android:text="注：拍下不付款冻结账户"
                    android:textColor="#ffcc0000"
                    android:textSize="@dimen/sp_11" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/appeal_head1"
                    android:layout_width="@dimen/dp_66"
                    android:layout_height="@dimen/dp_66"
                    android:layout_below="@id/appeal_text1"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_10"
                    app:roundAsCircle="true" />

                <TextView
                    android:id="@+id/appeal_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/appeal_head1"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_toRightOf="@id/appeal_head1"
                    android:includeFontPadding="false"
                    android:text="买家: @007"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/appeal_superior_id1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/appeal_name1"
                    android:layout_alignLeft="@id/appeal_name1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="上级ID：0112212"
                    android:textColor="#ff666666"
                    android:textSize="@dimen/sp_12" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/appeal_relative4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/appeal_relative3"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="备注："
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/appeal_upload_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:maxWidth="@dimen/dp_200"
                    android:text="没有付款！"
                    android:textColor="#ff333333"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/appeal_relative4"
                android:layout_marginTop="@dimen/dp_17"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="截图："
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_13" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/appeal_pic_rec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_25"
                    android:overScrollMode="never" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>
