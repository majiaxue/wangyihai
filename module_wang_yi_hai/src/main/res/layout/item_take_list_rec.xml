<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    app:cardBackgroundColor="#FFF"
    app:cardElevation="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/task_list_rec_pic"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_48"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_8" />

        <TextView
            android:id="@+id/task_list_rec_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/task_list_rec_pic"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="2019-10-10  16:23:01   前提交"
            android:textColor="#ff666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/task_list_rec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_toRightOf="@id/task_list_rec_pic"
            android:includeFontPadding="false"
            android:text="ajkn0077"
            android:textColor="#FF7C5FFF"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/take_list_rec_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_15"
            android:includeFontPadding="false"
            android:text="-25.00"
            android:textColor="#ffcc0000"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/take_list_rec_cancel_registration"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_10_ff4c49de"
            android:gravity="center"
            android:text="取消报名"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/take_list_rec_verify_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="预计两个小时通过审核"
            android:textColor="#ffff6666"
            android:visibility="gone"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/take_list_rec_pass_or_be_passed"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/tongguo1"
            android:gravity="center"
            android:text="已通过"
            android:visibility="gone"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

</android.support.v7.widget.CardView>