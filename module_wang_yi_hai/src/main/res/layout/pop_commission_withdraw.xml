<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp_328"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:background="@drawable/bg_5_fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="提现"
                android:textColor="#ff222222"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/pop_commission_withdraw_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:text="取消"
                android:textColor="#ffff6666"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:text="提现到"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/pop_commission_withdraw_but_weChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/select_withdraw"
                android:drawablePadding="@dimen/dp_12"
                android:text="微信"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_15"
                android:visibility="gone" />

            <!--android:layout_marginLeft="@dimen/dp_59"-->
            <RadioButton
                android:id="@+id/pop_commission_withdraw_but_aliPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableLeft="@drawable/select_withdraw"
                android:drawablePadding="@dimen/dp_12"
                android:text="支付宝"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_307"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="center_horizontal"
            android:background="#FFF1F2F2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:includeFontPadding="false"
            android:text="提现金额"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/pop_commission_withdraw_edit"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_50"
            android:layout_gravity="center_horizontal"
            android:digits="0123456789"
            android:drawablePadding="@dimen/dp_20"
            android:hint="请输入金额"
            android:inputType="number"
            android:textColor="#FFCCCCCC"
            android:textColorHint="#FFCCCCCC"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/pop_commission_withdraw_max_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:includeFontPadding="false"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_15"
            android:text="提现方式"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/pop_commission_withdraw_but_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/select_withdraw"
                android:drawablePadding="@dimen/dp_12"
                android:text="余额"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_15" />

            <RadioButton
                android:id="@+id/pop_commission_withdraw_but_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_60"
                android:button="@null"
                android:drawableLeft="@drawable/select_withdraw"
                android:drawablePadding="@dimen/dp_12"
                android:text="佣金"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_307"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="center_horizontal"
            android:background="#FFF1F2F2" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="注："
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/pop_commission_withdraw_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_9"
                android:text="手续费单笔扣除1元
                          \n提现需满足10及倍数
                          \n佣金提现每10元扣除1个贡献值"
                android:textColor="#ffcc0000"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/pop_commission_withdraw_withdraw"
            android:layout_width="@dimen/dp_199"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_17"
            android:background="@drawable/bg_20_ff66cc66"
            android:gravity="center"
            android:text="提现"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</RelativeLayout>
