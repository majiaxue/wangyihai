<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingshi.y_confirm_order.YConfirmOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beijing1"
        android:orientation="vertical">

        <include
            android:id="@+id/y_confirm_order_include"
            layout="@layout/include_status" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <ImageView
                android:id="@+id/y_confirm_order_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_15"
                android:src="@drawable/icon_fanhui_bai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确认订单"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_17" />

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/y_confirm_order_relative"
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_82"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/bg_5_fff">

        <ImageView
            android:id="@+id/y_confirm_order_image"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:src="@drawable/icon_dizhi" />

        <TextView
            android:id="@+id/y_confirm_order_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/y_confirm_order_image"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/y_confirm_order_image"
            android:includeFontPadding="false"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/y_confirm_order_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/y_confirm_order_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/y_confirm_order_name"
            android:includeFontPadding="false"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/y_confirm_order_detail"
            android:layout_width="@dimen/dp_210"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/y_confirm_order_name"
            android:layout_alignBottom="@id/y_confirm_order_image"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:textColor="#333333"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_16"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_14"
            android:src="@drawable/icon_gengduo2" />

        <TextView
            android:id="@+id/y_confirm_order_choose_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@id/y_confirm_order_image"
            android:includeFontPadding="false"
            android:text="请选择收获地址"
            android:textColor="#333333"
            android:textSize="@dimen/sp_15"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_331"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@drawable/bg_5_fff"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_14"
            android:text="商品信息"
            android:textColor="#ff222222"
            android:textSize="@dimen/dp_13" />

        <View
            android:layout_width="@dimen/dp_288"
            android:layout_height="@dimen/dp_1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_14"
            android:background="#FFDEDEDE" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_18">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/y_confirm_order_pic"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_75"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_18"
                app:roundedCornerRadius="@dimen/dp_5" />

            <TextView
                android:id="@+id/y_confirm_order_title"
                android:layout_width="@dimen/dp_204"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/y_confirm_order_pic"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_toRightOf="@id/y_confirm_order_pic"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:text="女子短袖文化时尚运动套装秋季激光焊套头常规形运动服"
                android:textColor="#ff222222"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/y_confirm_order_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/y_confirm_order_title"
                android:layout_alignLeft="@id/y_confirm_order_title"
                android:layout_marginTop="@dimen/dp_10"
                android:includeFontPadding="false"
                android:text="数量：1"
                android:textColor="#ff222222"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/y_confirm_order_title"
                android:layout_alignBottom="@id/y_confirm_order_pic"
                android:layout_toRightOf="@id/y_confirm_order_pic"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="价格："
                    android:textColor="#ff222222"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/y_confirm_order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="$ 80"
                    android:textColor="#ffc91818"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/y_confirm_order_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:includeFontPadding="false"
                    android:text="￥180.00"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#fff"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/y_confirm_order_number_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_24"
            android:text="共1件  合计：￥180"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/y_confirm_order_confirm"
            android:layout_width="@dimen/dp_106"
            android:layout_height="match_parent"
            android:background="#FFC91818"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
</LinearLayout>
