<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/dp_328"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_5_fff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="投诉"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_17" />

            <TextView
                android:id="@+id/pop_pay_order_complaint_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:text="取消"
                android:textColor="#ff262c3c"
                android:textSize="@dimen/sp_15" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_10"
            android:text="投诉内容："
            android:textColor="#ff262c3c"
            android:textSize="@dimen/sp_15" />

        <EditText
            android:id="@+id/pop_pay_order_complaint_edit"
            android:layout_width="@dimen/dp_311"
            android:layout_height="@dimen/dp_72"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@drawable/bg_2_ffbfbfbf"
            android:gravity="left"
            android:hint="请输入投诉内容"
            android:padding="@dimen/dp_10"
            android:textColor="#FF666666"
            android:textColorHint="#FF666666"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_18"
            android:text="上传图片："
            android:textColor="#ff262c3c"
            android:textSize="@dimen/sp_15" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:visibility="gone"
                android:id="@+id/pop_pay_order_complaint_pic"
                android:layout_width="@dimen/dp_144"
                android:layout_height="@dimen/dp_123"
                app:placeholderImage="@drawable/sahngchuan"
                app:placeholderImageScaleType="fitXY"
                app:roundedCornerRadius="@dimen/dp_5" />

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text="上传截图"
                android:textColor="#ff666666"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/pop_pay_order_complaint_submit"
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_22"
            android:background="@drawable/bg_20_ff4c49de"
            android:gravity="center"
            android:text="提交"
            android:textColor="#ffffffff"
            android:textSize="14sp" />

    </LinearLayout>

</RelativeLayout>