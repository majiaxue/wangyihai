<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingshi.y_confirm_payment.YConfirmPaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/beijing1"
        android:orientation="vertical">

        <include layout="@layout/include_status" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <ImageView
                android:id="@+id/y_address_back"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@drawable/icon_fanhui_bai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确认支付"
                android:textColor="#ffffffff"
                android:textSize="@dimen/sp_17" />

        </RelativeLayout>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0"
        android:layout_weight="1"
        android:background="#FFF2F2F2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/dp_331"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/bg_5_fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="商品信息"
                    android:textColor="#ff222222"
                    android:textSize="@dimen/dp_13" />

                <View
                    android:layout_width="@dimen/dp_288"
                    android:layout_height="@dimen/dp_1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="#FFDEDEDE" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_18">

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/y_confirm_payment_pic"
                        android:layout_width="@dimen/dp_75"
                        android:layout_height="@dimen/dp_75"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_18"
                        app:roundedCornerRadius="@dimen/dp_5" />

                    <TextView
                        android:id="@+id/y_confirm_payment_title"
                        android:layout_width="@dimen/dp_204"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/y_confirm_payment_pic"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_toRightOf="@id/y_confirm_payment_pic"
                        android:ellipsize="end"
                        android:includeFontPadding="false"
                        android:maxLines="2"
                        android:text="女子短袖文化时尚运动套装秋季激光焊套头常规形运动服"
                        android:textColor="#ff222222"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/y_confirm_payment_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/y_confirm_payment_title"
                        android:layout_alignLeft="@id/y_confirm_payment_title"
                        android:layout_marginTop="@dimen/dp_10"
                        android:includeFontPadding="false"
                        android:text="数量：1"
                        android:textColor="#ff222222"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/y_confirm_payment_title"
                        android:layout_alignBottom="@id/y_confirm_payment_pic"
                        android:layout_toRightOf="@id/y_confirm_payment_pic"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="价格："
                            android:textColor="#ff222222"
                            android:textSize="@dimen/sp_12" />

                        <TextView
                            android:id="@+id/y_confirm_payment_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="$ 80"
                            android:textColor="#ffc91818"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:id="@+id/y_confirm_payment_original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:includeFontPadding="false"
                            android:text="￥180.00"
                            android:textColor="#ff999999"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_331"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/bg_5_fff"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="商品信息"
                    android:textColor="#ff222222"
                    android:textSize="@dimen/dp_13" />

                <View
                    android:layout_width="@dimen/dp_288"
                    android:layout_height="@dimen/dp_1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="#FFDEDEDE" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_14"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="订单总价："
                        android:textColor="#ff222222"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/y_confirm_payment_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="80"
                        android:textColor="#ffc91818"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_14"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="运费："
                        android:textColor="#ff222222"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/y_confirm_payment_freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="0.0"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_14"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="实付款（含运费）："
                        android:textColor="#ff222222"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/y_confirm_payment_actual_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="$80.00"
                        android:textColor="#ffc91818"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_14"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="快递公司："
                        android:textColor="#ff222222"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/y_confirm_payment_express_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="80"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="快递单号："
                        android:textColor="#ff222222"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/y_confirm_payment_tracking_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="80"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_300"
                    android:layout_height="@dimen/dp_0_5"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="#FFEBECED" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_14"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="备注："
                        android:textColor="#ff222222"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/y_confirm_payment_remark"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_30"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="有什么想要告诉商家的请留言"
                        android:includeFontPadding="false"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_14"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="收货人："
                        android:textColor="#ff222222"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/y_confirm_payment_consignee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="80"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_14"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/dp_24"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="收货人手机号："
                        android:textColor="#ff222222"
                        android:textSize="@dimen/sp_12" />

                    <View
                        android:layout_width="@dimen/dp_0"
                        android:layout_height="@dimen/dp_0"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/y_confirm_payment_consignee_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:text="80"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dp_331"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/bg_5_fff"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_14"
                    android:text="支付方式"
                    android:textColor="#ff222222"
                    android:textSize="@dimen/dp_13" />

                <View
                    android:layout_width="@dimen/dp_288"
                    android:layout_height="@dimen/dp_1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="#FFDEDEDE" />

                <TextView
                    android:id="@+id/y_confirm_payment_system_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="系统币"
                    android:textColor="#ff222222"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#fff"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/y_confirm_payment_number_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_24"
            android:text="共1件  合计：￥180"
            android:textColor="#ff999999"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/y_confirm_payment_confirm"
            android:layout_width="@dimen/dp_106"
            android:layout_height="match_parent"
            android:background="#FFC91818"
            android:gravity="center"
            android:text="确认支付"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

</LinearLayout>
