<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_83"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_14"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="@dimen/dp_14">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/take_records_rec_image"
                android:layout_width="@dimen/dp_33"
                android:layout_height="@dimen/dp_31"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:src="@drawable/renwu_jinbi" />

            <TextView
                android:id="@+id/take_records_rec_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_marginTop="@dimen/dp_22"
                android:layout_toRightOf="@+id/take_records_rec_image"
                android:text="初级礼包"
                android:textColor="#ff7c5fff"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/take_records_rec_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="2019-10-10  16:23:01"
                android:textColor="#ff666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/take_records_rec_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:text="兑换"
                android:textColor="#ffcc0000"
                android:textSize="@dimen/sp_17" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>