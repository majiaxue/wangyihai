<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xingshi.y_mine.y_my_team.YMyTeamActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_405"
        android:scaleType="fitXY"
        android:src="@drawable/beijing" />

    <LinearLayout
        android:id="@+id/y_my_team_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_status" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">

            <ImageView
                android:id="@+id/y_my_team_back"
                android:layout_width="@dimen/dp_28"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:padding="@dimen/dp_10"
                android:src="@drawable/icon_fanhui_bai" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的团队"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_17" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/y_my_team_team_returns"
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_195"
        android:layout_below="@id/y_my_team_linear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/kapian"
        android:gravity="center"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/sp_45"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/y_my_team_relative"
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_106"
        android:layout_below="@id/y_my_team_team_returns"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@drawable/bg_5_fff">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/y_my_team_head"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/y_my_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/y_my_team_head"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/y_my_team_head"
            android:includeFontPadding="false"
            android:text="买家: @007"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/y_my_team_superior_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/y_my_team_name"
            android:layout_alignLeft="@id/y_my_team_name"
            android:layout_marginTop="@dimen/dp_10"
            android:includeFontPadding="false"
            android:text="上级ID：0112212"
            android:textColor="#ff666666"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/y_my_team_name"
            android:layout_alignBottom="@id/y_my_team_head"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上级级别："
                android:textColor="#ff666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/y_my_team_superior_rank"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:background="@drawable/bojin"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14"
                android:text="铂金"
                android:textColor="#FFFFFFFF"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_26"
                android:includeFontPadding="false"
                android:text="微信："
                android:textColor="#ff666666"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/y_my_team_weChat_qr"
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55" />

        </LinearLayout>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cd"
        android:layout_width="@dimen/dp_331"
        android:layout_height="@dimen/dp_163"
        android:layout_below="@id/y_my_team_relative"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_12"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/y_my_team_my_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_15"
                    android:text="我的ID：01524515"
                    android:textColor="#ff333333"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/y_my_team_my_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_18"
                    android:background="@drawable/bojin"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14"
                    android:text="铂金"
                    android:textColor="#FFFFFFFF"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#FFECECEC" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_97"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/y_my_team_new_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_19"
                        android:drawablePadding="@dimen/dp_4"
                        android:text="今日新增"
                        android:textColor="#FF333333"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_58"
                    android:background="#FFF0F0F0" />

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/y_my_team_keep_pushing_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_19"
                        android:drawablePadding="@dimen/dp_4"
                        android:text="我的直推"
                        android:textColor="#FF333333"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_58"
                    android:background="#FFF0F0F0" />

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/y_my_team_push_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_19"
                        android:drawablePadding="@dimen/dp_4"
                        android:text="我的间推"
                        android:textColor="#FF333333"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_58"
                    android:background="#FFF0F0F0" />

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/y_my_team_team_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FF333333"
                        android:textSize="@dimen/sp_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_19"
                        android:drawablePadding="@dimen/dp_4"
                        android:text="我的团队"
                        android:textColor="#FF333333"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#FFECECEC" />

            <TextView
                android:id="@+id/y_my_team_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:paddingRight="@dimen/dp_15"
                android:textColor="#ff333333"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_below="@id/cd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/smart">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rec_team"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>

</ScrollView>
