<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    app:cardBackgroundColor="#FFF"
    app:cardElevation="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/pay_a_tip_rec_pic"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_66"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_24"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/pay_a_tip_rec_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/pay_a_tip_rec_pic"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_toRightOf="@id/pay_a_tip_rec_pic"
            android:includeFontPadding="false"
            android:textColor="#FF9B70F3"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/pay_a_tip_rec_title"
            android:layout_width="@dimen/dp_251"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_a_tip_rec_name"
            android:layout_alignLeft="@id/pay_a_tip_rec_name"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="标题：0112212"
            android:textColor="#FF333333"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/pay_a_tip_rec_places"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/pay_a_tip_rec_name"
            android:layout_alignBottom="@id/pay_a_tip_rec_pic"
            android:includeFontPadding="false"
            android:textColor="#ffff6666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/pay_a_tip_rec_common"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toLeftOf="@id/pay_a_tip_rec_shareholder"
            android:background="@drawable/putong"
            android:gravity="center"
            android:text="普通100"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/pay_a_tip_rec_shareholder"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/gudong1"
            android:gravity="center"
            android:text="股东120"
            android:textColor="#ffffffff"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/pay_a_tip_rec_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:includeFontPadding="true"
            android:textColor="#ff333333"
            android:textSize="@dimen/sp_17" />

    </RelativeLayout>

</android.support.v7.widget.CardView>