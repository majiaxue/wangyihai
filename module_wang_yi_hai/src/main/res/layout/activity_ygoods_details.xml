<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingshi.y_home.y_goods_details.YGoodsDetailsActivity">

    <LinearLayout
        android:id="@+id/y_goods_details_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/y_goods_details_buy_goods"
            android:layout_width="@dimen/dp_331"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/bg_20_ffc91818"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="#FFFFFFFF"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/y_goods_details_nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/y_goods_details_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical">

            <com.stx.xhb.xbanner.XBanner
                android:id="@+id/y_goods_detail_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_375"
                app:AutoPlayTime="3000"
                app:isAutoPlay="false"
                app:isShowIndicatorOnlyOne="true"
                app:isShowNumberIndicator="true"
                app:numberIndicatorBacgroud="@drawable/number_indicator_bacgroud"
                app:pointsPosition="RIGHT" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/y_goods_details_title"
                    android:layout_width="@dimen/dp_250"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="黑色无袖背心超短裙收腰款"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/sp_15" />

                <View
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="@dimen/dp_0"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/y_goods_details_is_hot_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ionrexiao" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/y_goods_details_present_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:includeFontPadding="false"
                    android:text="￥ 80"
                    android:textColor="#ffc91818"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/y_goods_details_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_44"
                    android:includeFontPadding="false"
                    android:text="￥180.00"
                    android:textColor="#ff999999"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/y_goods_details_sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:drawableLeft="@drawable/ion1duihao"
                    android:drawablePadding="@dimen/dp_6"
                    android:includeFontPadding="false"
                    android:text="已售1042笔"
                    android:textColor="#FF4C49DE"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/y_goods_details_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_44"
                    android:includeFontPadding="false"
                    android:text="店铺销售量第一·网站销量榜单排名第104名"
                    android:textColor="#FF646464"
                    android:textSize="@dimen/sp_13" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#FFEDEDED" />

            <LinearLayout
                android:id="@+id/y_goods_details_specification_linear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_37"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="规格"
                    android:textColor="#ff646464"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/y_goods_details_specification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="黑色无袖 S码"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#FFEDEDED" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_37"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:text="服务"
                    android:textColor="#ff646464"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:drawableLeft="@drawable/ion2duihao"
                    android:drawablePadding="@dimen/dp_5"
                    android:text="正品保证"
                    android:textColor="#ff000000"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_131"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#FF4C49DE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="商品详情"
                    android:textColor="#ff4c49de"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:layout_width="@dimen/dp_131"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="#FF4C49DE" />
            </LinearLayout>


            <WebView
                android:id="@+id/y_goods_details_web_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/include_status" />

        <LinearLayout
            android:id="@+id/y_goods_details_back"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_28"
            android:background="@drawable/bg_back_ff0e050b"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_fanhui_bai" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
